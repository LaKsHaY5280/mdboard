                    "name": "Delete Note",
                    "request": {
                        "method": "DELETE",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/notes?id={{noteId}}",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "notes"
                            ],
                            "query": [
                                {
                                    "key": "id",
                                    "value": "{{noteId}}"
                                }
                            ]
                        },
                        "description": "Permanently delete a note."
