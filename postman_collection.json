                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"noteId\": \"{{noteId}}\",\n  \"title\": \"Updated Project Planning\",\n  \"content\": \"Updated content with new requirements and specifications...\",\n  \"tags\": [\"planning\", \"project\", \"dashboard\", \"requirements\"],\n  \"priority\": \"urgent\",\n  \"isPinned\": true\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/notes",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "notes"
                            ]
                        },
                        "description": "Update an existing note. Only provided fields will be updated."
