                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"Project Planning\",\n  \"content\": \"Plan the new dashboard project with all required features...\",\n  \"category\": \"work\",\n  \"tags\": [\"planning\", \"project\", \"dashboard\"],\n  \"priority\": \"high\",\n  \"dueDate\": \"2024-01-25T15:30:00.000Z\",\n  \"isPinned\": true,\n  \"isArchived\": false,\n  \"workspace\": \"development\"\n}"
