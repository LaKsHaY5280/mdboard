                    "name": "Create Simple Note",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"Quick Note\",\n  \"content\": \"Just a simple note\"\n}"
                        },
                        "url": {
